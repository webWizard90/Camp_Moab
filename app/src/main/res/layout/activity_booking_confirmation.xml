<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Reservations.BookReservation"
    android:background="@drawable/grad">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/txtReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="RESERVATION DATE"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtReservation"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text=""
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtGuests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resDate"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="GUESTS"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/guestLinearList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtGuests"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:padding="10dp">

        </LinearLayout>

        <TextView
            android:id="@+id/txtNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guestLinearList"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="NOTES:"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/txtNotes"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:background="@drawable/border"
            android:gravity="top|left"
            android:text="" />

        <Button
            android:id="@+id/btnConfirmRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBox"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/btnConfirmRes"
            android:padding="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</ScrollView>