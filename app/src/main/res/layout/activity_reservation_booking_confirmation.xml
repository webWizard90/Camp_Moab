<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    tools:context=".Reservations.BookReservation"
    android:background="@drawable/grad">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="15dp" >

        <TextView
            android:id="@+id/txtReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESERVATION DATE"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtReservation"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtGuests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resDate"
            android:layout_marginTop="5dp"
            android:text="GUESTS"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/guestLinearList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtGuests"
            android:orientation="vertical"
            android:textColor="@color/black" >

        </LinearLayout>

        <TextView
            android:id="@+id/txtNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guestLinearList"
            android:layout_marginTop="20dp"
            android:text="NOTES:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txtBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/txtNotes"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/border"
            android:gravity="top|left"
            android:text=""
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnConfirmRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBox"
            android:layout_marginTop="15dp"
            android:text="@string/btnConfirmRes"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtReservationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnConfirmRes"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/txtReservationMessage"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>